<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="medicine.newmedicine.NewmedicineController">
    <children>
        <Label text="Название лекарства" />
        <TextField fx:id="tfName" promptText="Название" />
        <Label text="Год производства" />
        <TextField fx:id="tfManufactureYear" promptText="Год" />
        <Label text="Количество" />
        <TextField fx:id="tfQuantity" promptText="Количество" />
        <Button fx:id="btAddCover" text="Выберите обложку" />
        <Button fx:id="btAddMedicine" text="Добавить лекарство" onAction="#clickAddMedicine"/>
    </children>
</VBox>


